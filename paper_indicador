tent2['gdplog']= np.log(tent2['gdp_18'])
TAB1=tent2.describe()
TAB2=tent2[['v5','v6','v7','int','policy','gdplog','gsc','p_d_x']].corr()

x1=pd.DataFrame(tent2[['v5','v6','v7','int','gdplog','year_x']])
x2=pd.DataFrame(tent2[['v5','v6','v7','int','policy','gdplog','year_x']])
x3=pd.DataFrame(tent2[['v5','v6','v7','gdplog','year_x']])
x4=pd.DataFrame(tent2[['v5','v6','v7','policy','gdplog','year_x']])

