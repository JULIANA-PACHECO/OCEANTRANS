y2=pd.DataFrame(tent2[['p_d_x']])
y3=pd.DataFrame(tent2[['int']])

model1 = sm.OLS(y1, x1)
results_1 = model1.fit()
model2 = sm.OLS(y1, x2)
results_2 = model2.fit()
model3 = sm.OLS(y2, x1)
results_3 = model3.fit()
model4 = sm.OLS(y2, x2)
results_4 = model4.fit()
model5 = sm.OLS(y3, x3)
results_5 = model5.fit()
model6 = sm.OLS(y3, x4)
results_6 = model6.fit()
stargazer = Stargazer([results_1,results_2,results_3,results_4,results_5,results_6])
stargazer
